<p id="notice"><%= notice %></p>

<h1>Educational And Methodical Works</h1>

<table>
  <thead>
    <tr>
      <th>Наименование </th>
      <th>Норма времени в часах</th>
      <th>Примечание</th>
      <th>Количество</th>
      <th>Итого</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @educational_and_methodical_works.each do |educational_and_methodical_work| %>
      <tr>
        <td><%= educational_and_methodical_work.work_name %></td>
        <td><%= educational_and_methodical_work.time_rate %></td>
        <td><%= educational_and_methodical_work.note %></td>
        <td><input id="quantity-em" class="quantity-em" name="quantity-em" type="number" min="0" data-time-em="<%= educational_and_methodical_work.time_rate %>" data-name-input-em="<%= educational_and_methodical_work.work_name %>"/></td>
        <td><p class="new-quantity-em"></p></td>
        <td><%= link_to 'Show', educational_and_methodical_work %></td>
        <td><%= link_to 'Edit', edit_educational_and_methodical_work_path(educational_and_methodical_work) %></td>
        <td><%= link_to 'Destroy', educational_and_methodical_work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_tag "Save", class: "add-quantity-em" %>
<br>

