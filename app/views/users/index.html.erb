<p id="notice"><%= notice %></p>

<h1>Пользователи</h1>

<table>
  <thead>
    <tr>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Отчество</th>
      <th>Аватар</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.surname %></td>
        <td><%= user.name %></td>
        <td><%= user.patronymic %></td>
        <td><%= image_tag(user.avatar.thumb.url, alt: 'Аватар') if user.avatar? %></td>

        <td><%= link_to 'Show', user %></td>
        <% if policy(user).edit? %>
          <td><%= link_to 'Edit', edit_user_registration_path(user) %></td>
        <% end %>
        <% if policy(user).destroy? %>
          <td><%= link_to 'Destroy',  admin_destroy_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
